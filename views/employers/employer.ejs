<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../public/style/employer.css">
    <link rel="stylesheet" href="../../public/style/header.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Hind+Madurai&display=swap" rel="stylesheet">
    <title>employer</title>
</head>

<body>
    <video autoplay muted id="myVideo">
        <source src="../../public/media/images/try.mp4" type="video/mp4">
    </video>

    <nav style="position: absolute; z-index: 8;">
        <ul><li><a href="/" class="active"><i class="fa fa-home"><small class="small"> Home</small></i></a></li></ul>
        <ul><li><a><i class="fa fa-lightbulb-o"> <small class="small"> Vision</small></small></i></a></li></ul>
        <ul><li><a><i class="fa fa-user-circle"> <small class="small"> Sign up</small></i></a></li></ul>
        <ul><li><a><i class="fa fa-group"><small class="small"> About us</small></i></a></li></ul>
        <ul><li><a href="/feedback"><i class="fa fa-edit"> <small class="small"> Feedback</small></i></a></li></ul>
    
    
        <div class="tubelight">
            <div class="light-ray"></div>
        </div>
    </nav>


<div id="all">
    <!---------------- Main divs ------------- -->

    <div id="boxes">
     

        <div id="leftbox" style="text-align:center;background-image: url(https://i.imgur.com/mPPEsss.gif);background-repeat:no-repeat;widows: 300px;height:260px;">
            <!-- <h2>Learn:</h2>  -->
            <img id="personal-Pic" src="https://aghyadalbalkhi-asac.github.io/jQuery-CDN/images/protfolioPersonal.jpeg" alt="">

        </div>

        <div id="middlebox">
            <h2>Contact</h2>
            <ul class="ul">
                <li>Name: <%= EmployerInfo.fullname %></li>
                <li>Phone Number: <%= EmployerInfo.phonenumber %></li>
                <li>E-mail: <%= EmployerInfo.email %> </li>
            </ul>
        </div>

        <div id="rightbox">
            <h2>Personal Information:</h2>
            <ul class="ul">
                <li>Company Name: <%= EmployerInfo.companyname %>  </li>
                <li>Company Industry: <%= EmployerInfo.companyindustry %> </li>
                <li>Location: <%= EmployerInfo.companylocation %>  </li>
            </ul>
        </div>
    </div>

    <div id="select-Div">
        <h3>
            Select By Title
        </h3>
        <select name="select By Title" id="select">Select By Title
            <% jobtitleInfo.forEach((val)=>{ %>
                <option class="opt" value="<%= val.jobtitle %>"><%= val.jobtitle %></option>
         <% }); %>
        </select>
    </div>
    <br>
    <br>
    <hr>

    <!------------------Applicants Div-------------->
    <div id="people">
        <!-- <h1>Meet Our Applicants</h1> -->
        <% applicantProfiles.forEach((val)=>{ %>
        <div class="imgsdiv" id="<%= val.jobtitle %>">
            <h2 class="Names"> <a href="/ApplicantFE/<%= val.id %>"><%= val.fullname %></a> </h2>
            <img class="app-Pic" src="<%= val.images %>" alt="">
            <p><%= val.aboutme %></p>
        </div>
        <% }); %>
        
        <div class="imgsdiv" id="javade">
            <h2 class="Names"> <a href="">test</a> </h2>
            <img class="app-Pic" src="" alt="">
            <p>any thing</p>
        </div>
</div>
<br>
<br>
<br>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="../../public/js/employer.js"></script>
<script src="../../public/js/app.js"></script>
</body>

</html>